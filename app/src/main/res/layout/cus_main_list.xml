<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cuslist_main_icon"
            android:background="@drawable/circle_bg_green"
            android:padding="5dp"
            android:src="@drawable/ic_type_daily"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_light"
            android:text="Rp 13.000,-"
            android:id="@+id/cuslist_main_nom"
            android:layout_alignTop="@+id/cuslist_main_icon"
            android:layout_toRightOf="@+id/cuslist_main_icon"
            android:layout_toEndOf="@+id/cuslist_main_icon"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli barang lah, wkwwkkwkwkwkwkwwkwkwkw"
            android:id="@+id/cuslist_main_ket"
            android:singleLine="true"
            android:layout_alignBottom="@+id/cuslist_main_icon"
            android:layout_toRightOf="@+id/cuslist_main_icon"
            android:layout_toEndOf="@+id/cuslist_main_icon"
            android:textSize="12sp"
            android:textColor="@color/abc_secondary_text_material_light" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>